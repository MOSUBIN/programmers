using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp168
{


    //길이가 같은 두 문자열 str1과 str2가 주어집니다.

    //두 문자열의 각 문자가 앞에서부터 서로 번갈아가면서
    //한 번씩 등장하는 문자열을 만들어 return 하는 solution 함수를 완성해 주세요


    internal class Program
    {
        static void Main(string[] args)
        {

            string str1 = Console.ReadLine();        //str1 값 입력받기 
            string str2 = Console.ReadLine();        //str2 값 입력받기 
            string answer = "";                      //answer 문자열 변수 추가 
            for (int i = 0; i < str1.Length; i++)    //str1의 길이만큼 반복 
            {
                answer += str1[i].ToString() + str2[i].ToString();   // 추가대입연산자(+=)를 이용해 answer에 대입 , Tostring()을 통해 문자열로 변환 
                
            }
            Console.Write(answer);
        }
                
        }
    }
